[mysqld]
# Basic server settings
bind-address = 0.0.0.0
port = 3306

# Data directory
datadir = /var/lib/mysql

# Performance tuning
max_connections = 200
query_cache_size = 16M
innodb_buffer_pool_size = 128M

# Logging
log_error = /var/log/mysql/error.log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

[mysqld_safe]
log_error = /var/log/mysql/error.log
